<h1>Editando kit-bixo de <%= @bixo.nome %></h1>

<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <%= form_with(model: @venda, local: true) do |form| %>
      <% if @venda.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(venda.errors.count, "error") %> prohibited this venda from being saved:</h2>
    
          <ul>
          <% @venda.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
    
      <h3>Tamanho da camiseta</h3>
    
      <% Venda.tamanhos.each do |k, v| %>
        <div class="radio">
          <%= radio_button_tag("venda[tamanho]", v, (k == @venda.tamanho)) %>
          <%= label_tag("venda[tamanho]", k) %>
        </div>
      <% end %>
    
      <h3>Cor da mochila</h3>
    
      <% Venda.cors.each do |k, v| %>
        <div class="radio">
          <%= radio_button_tag("venda[cor]", v, (k == @venda.cor)) %>
          <%= label_tag("venda[cor]", k) %>
        </div>
      <% end %>
    
      <div class="row">
        <div class="col-md-6">
          <div class="actions">
            <%= link_to 'Voltar', @bixo, class: 'btn btn-danger btn-lg btn-wide' %>
          </div>
        </div>
    
        <div class="col-md-6">
          <div class="actions">
            <%= form.submit "Confirmar", class: 'btn btn-success btn-lg' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-4"></div>
</div>



<h1><%= @bixo.nome %></h1>

<div class="row">
  <div class="col-md-4">
    <h2>Dados pessoais</h2>
    <p>
      <strong>Nome:</strong>
      <%= @bixo.nome %>
    </p>

    <p>
      <strong>Email:</strong>
      <%= @bixo.email %>
    </p>

    <p>
      <strong>Telefone:</strong>
      <%= @bixo.telefone %>
    </p>

    <p>
      <strong>Curso:</strong>
      <%= @bixo.curso %>
    </p>
    <div class="actions">
      <%= link_to 'Editar', edit_bixo_path(@bixo), class: 'btn btn-success btn-lg' %>
    </div>
  </div>
  <div class="col-md-4">
    <h2>Vendas</h2>
    <% if @bixo.vendas.empty? %>
      <p><em>Ainda não comprou kit</em></p>
    <% else %>
      <% count = 1 %>
      <% @bixo.vendas.each do |venda| %>
        <h3>Kit vendido #<%= count %></h3>
        <% count += 1 %>
        <p><strong>Tamanho da camiseta:</strong> <%= venda.tamanho %></p>
        <p><strong>Cor da mochila:</strong> <%= venda.cor %></p>
        <div class="actions">
          <%= link_to 'Editar', edit_venda_path(venda), class: 'btn btn-warning' %>
          <%= link_to 'Apagar', venda_path(venda), class: 'btn btn-danger', method: :delete %>
        </div>
      <% end %>
    <% end %>
    <div class="actions">
      <%= link_to 'Vender Kit', nova_venda_path(@bixo), class: 'btn btn-success btn-lg', method: :post %>
    </div>
  </div>
  <div class="col-md-4">
    <h2>Modalidades</h2>
    <% if @bixo.modalidades.empty? %>
      <p><em>Nenhuma</em></p>
    <% else %>
      <% @bixo.modalidades.each do |mod| %>
        <p>
          <%= mod.nome %>
        </p>
      <% end %>
    <% end %>
    <div class="actions">
      <%= link_to 'Mudar modalidades', edit_bixo_modalidades_path(@bixo), class: 'btn btn-success btn-lg' %>
    </div>
  </div>
</div>

<div class="actions">
  <%= link_to 'Voltar à lista', bixos_path, class: 'btn btn-danger btn-lg' %>
</div>

